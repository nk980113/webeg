{
    "env": {
        "browser": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base"
    ],
    "globals": {
        "describe": false,
        "beforeEach": false,
        "it": false,
        "cy": false,
        "expect": false,
        "HTMLElementEventMap": false,
        "JSX": false,
        "HTMLElementTagNameMap": false
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": "off",
        "import/no-extraneous-dependencies": "off",
        // TSC will handle these two
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "no-restricted-syntax": "off",
        "no-use-before-define": "off",
        "no-param-reassign": "off",
        "@typescript-eslint/no-use-before-define": ["error", "nofunc"],
        "no-redeclare": "off"
    }
}
